{% extends 'base.html.twig' %}

{% block title %}Promo index{% endblock %}

{% block body %}
    <h1>Promo index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Reduction</th>
                <th>Date_fin</th>
                <th>Date_debut</th>
                <th>Priceafterpromo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for promo in promos %}
            <tr>
                <td>{{ promo.id }}</td>
                <td>{{ promo.reduction }}</td>
                <td>{{ promo.dateFin ? promo.dateFin|date('Y-m-d') : '' }}</td>
                <td>{{ promo.dateDebut ? promo.dateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ promo.priceafterpromo }}</td>
                <td>
                    <a href="{{ path('app_promo_admin_show', {'id': promo.id}) }}">show</a>
                    <a href="{{ path('app_promo_admin_edit', {'id': promo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_promo_admin_new') }}">Create new</a>
{% endblock %}
